<div class="container-custom col-8 col-lg-4 mx-auto my-5">
  <div class="p-4">
    <a class="btn btn-outline-secondary mb-4" href="<%= home_index_path %>">Volver</a>
    <h2 class="text-center mb-4">Iniciar sesión</h2>

    <%= form_for(:user, url: new_user_session_path, html: { id: 'login-form' }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Ingrese su correo electrónico' %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Ingrese su contraseña' %>
      </div>
      <hr>
      <div class="d-flex align-items-center justify-content-between">
        <%= f.submit 'Iniciar sesión', class: 'btn btn-primary' %>
        <%= link_to '¿Olvidó su contraseña?', new_user_password_path %>
      </div>
    <% end %>
  </div>
</div>

<% if flash[:alert].present? %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: '<%= flash[:alert] %>',
      });
    });
  </script>
<% end %>

<script>
  document.getElementById('login-form').addEventListener('submit', function(event) {
    var emailField = document.getElementById('user_email');
    var passwordField = document.getElementById('user_password');

    if (emailField.value === '' || passwordField.value === '') {
      event.preventDefault();
      Swal.fire({
        icon: 'warning',
        title: 'Por favor, complete todos los campos para iniciar sesión.',
      });
    }
  });
</script>
